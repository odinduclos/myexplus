{% extends 'base.html.twig' %}

{% block body %}
    <h1>Metiers list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Photopath</th>
                <th>Definition</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for metier in metiers %}
            <tr>
                <td><a href="{{ path('metiers_show', { 'id': metier.id }) }}">{{ metier.id }}</a></td>
                <td>{{ metier.titre }}</td>
                <td>{{ metier.photoPath }}</td>
                <td>{{ metier.definition }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('metiers_show', { 'id': metier.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('metiers_edit', { 'id': metier.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('metiers_new') }}">Create a new metier</a>
        </li>
    </ul>
{% endblock %}
