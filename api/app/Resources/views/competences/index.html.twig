{% extends 'base.html.twig' %}

{% block body %}
    <h1>Competences list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for competence in competences %}
            <tr>
                <td><a href="{{ path('competences_show', { 'id': competence.id }) }}">{{ competence.id }}</a></td>
                <td>{{ competence.titre }}</td>
                <td>{{ competence.type }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('competences_show', { 'id': competence.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('competences_edit', { 'id': competence.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('competences_new') }}">Create a new competence</a>
        </li>
    </ul>
{% endblock %}
