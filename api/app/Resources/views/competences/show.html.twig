{% extends 'base.html.twig' %}

{% block body %}
    <h1>Competence</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ competence.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ competence.titre }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ competence.type }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('competences_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('competences_edit', { 'id': competence.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
